        <TextBox x:Name="txtPincode9" HorizontalAlignment="Left" Height="88" Margin="220,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" BorderBrush="White" TextChanged="TextBox_TextChanged" SpellCheck.IsEnabled="True" Background="#FFE42727" CaretBrush="White"/>
