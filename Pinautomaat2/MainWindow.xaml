        <Button Content="3" HorizontalAlignment="Left" Margin="365,220,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.469,-0.771" Height="45" Click="Button_Click_3"/>
        <Button Content="4" HorizontalAlignment="Left" Margin="220,270,0,0" VerticalAlignment="Top" Width="65" Height="45" Click="Button_Click_4"/>
        <Button Content="5" HorizontalAlignment="Left" Margin="290,270,0,0" VerticalAlignment="Top" Width="70" Height="45" Click="Button_Click_5"/>
        <Button Content="6" HorizontalAlignment="Left" Margin="365,270,0,0" VerticalAlignment="Top" Width="75" Height="45" Click="Button_Click_6"/>
        <Button Content="7" HorizontalAlignment="Left" Margin="220,321,0,0" VerticalAlignment="Top" Width="65" Height="44" Click="Button_Click_7"/>
        <Button Content="8" HorizontalAlignment="Left" Margin="290,321,0,0" VerticalAlignment="Top" Width="70" Height="44" Click="Button_Click_8"/>
        <Button Content="9" HorizontalAlignment="Left" Margin="365,321,0,0" VerticalAlignment="Top" Width="75" Height="44" Click="Button_Click_9"/>
        <Button Content="*" HorizontalAlignment="Left" Margin="220,370,0,0" VerticalAlignment="Top" Width="65" Height="31" Click="Button_Click_10"/>
        <Button Content="0" HorizontalAlignment="Left" Margin="290,370,0,0" VerticalAlignment="Top" Width="70" Height="31" Click="Button_Click_11"/>
        <Button Content="#" HorizontalAlignment="Left" Margin="365,370,0,0" VerticalAlignment="Top" Width="75" Height="31" Click="Button_Click_12"/>
